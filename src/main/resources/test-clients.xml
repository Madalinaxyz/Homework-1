<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Import application-context.xml to reuse shared beans -->
    <import resource="application-context.xml"/>

    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="location" value="classpath:clients.properties"/>
    </bean>

    <!-- Accounts -->
    <bean id="savingAccount1" class="com.luxoft.bankapp.model.SavingAccount">
        <constructor-arg value="1000"/> <!-- Initial balance -->
    </bean>

    <bean id="checkingAccount1" class="com.luxoft.bankapp.model.CheckingAccount">
        <constructor-arg value="0"/> <!-- Initial balance -->
        <constructor-arg value="1000"/> <!-- Overdraft -->
    </bean>

    <bean id="checkingAccount2" class="com.luxoft.bankapp.model.CheckingAccount">
        <constructor-arg value="0"/> <!-- Initial balance -->
        <constructor-arg value="1500"/> <!-- Overdraft -->
    </bean>

    <bean id="client1" class="com.luxoft.bankapp.model.Client">
        <constructor-arg name="name" value="${client1}"/> <!-- Name -->
        <constructor-arg name="gender" value="MALE"/> <!-- Gender -->
        <property name="city" value="Moscow"/>
        <property name="repository" ref="clientRepository"/> <!-- Set repository first -->
        <property name="accounts">
            <list>
                <ref bean="savingAccount1"/>
                <ref bean="checkingAccount1"/>
            </list>
        </property>
    </bean>

    <bean id="client2" class="com.luxoft.bankapp.model.Client">
        <constructor-arg name="name" value="${client2}"/> <!-- Name -->
        <constructor-arg name="gender" value="MALE"/> <!-- Gender -->
        <property name="city" value="Kiev"/>
        <property name="repository" ref="clientRepository"/> <!-- Set repository first -->
        <property name="accounts">
            <list>
                <ref bean="checkingAccount2"/>
            </list>
        </property>
    </bean>
</beans>


